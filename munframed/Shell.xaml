<Window x:Class="munframed.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:munframed"
        xmlns:uc="clr-namespace:munframed.usercontrols"
        mc:Ignorable="d"
        Title="Music Unframed" Height="350" Width="800" Loaded="OnLoaded" >
  <Window.Resources>
  </Window.Resources>
  <DockPanel>
    <uc:EpisodeHeader DockPanel.Dock="Top" />
    <uc:SongList DockPanel.Dock="Left"/>
    <uc:PictureList x:Name="SelectedItemPictures" DataContext="{Binding SelectedItem}" DockPanel.Dock="Right" Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.SelectedItem, Converter={local:NullToVisibilityConverter}}"/>
  </DockPanel>
</Window>
